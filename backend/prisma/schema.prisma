generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum Type {
    LIMIT
    MARKET
}
enum Kind {
    SELL
    BUY
}
enum Status {
    PENDING
    LOADING
    CANCELLED
}
model Order {
    id String @id @default(uuid())
    type Type
    kind Kind
    price Float
    market String
    quantity Float
    status Status @default(PENDING)
    createdAt DateTime @default(now()) @db.Timestamp(6)
    updatedAt DateTime @updatedAt
}
